.nested-fields
  .row
    .col.col-md-auto
      %label.trigger-number
        - if f.index == 'new_conditions'
          +
        - else
          = f.index + 1
    .col
      = f.association :sensor, collection: Sensor.order('name'), label_method: :name_and_id, value_method: :id, label: false, prompt: '...add Sensor', input_html: {class: 'choose_sensor'}
    .col.form-group.d-flex.align-items-center
      .range{data: {min: -20, max: 100, step: 1}}
        .row.range__fallback
          .col
            = f.input :from, label: false, input_html: {class: 'range__hidden range__hidden--min'}
          .col
            = f.input :to, label: false, input_html: {class: 'range__hidden range__hidden--max'}

    .col.col-md-auto
      = link_to_remove_association button_tag("Ã—", type: 'button', class: 'btn btn-danger '), f


