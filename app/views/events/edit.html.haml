.container
  .row
    .col
      %h1 Editing event

  .row
    .col
      = render 'form'
  .row
    .col
      %h3 Event Activations
      %table.table.table-striped.table-hover
        %thead
          %tr
            %th Id
            %th Started at
            %th Ended at
        %tbody
          = render @event.activations.order(:started_at)
  .row
    .col
      %p
      - if @event.active?
        %h3 Event is happening now
      - else
        - if @event.last_activation
          %h3 Event has happened
        - else
          %h3 Event never happened
  .row
    .col
      %p
  .row
    .col
      = link_to 'Back', events_path, class: 'btn btn-secondary'
    .col
      - if @event.active?
        = button_to 'Stop', stop_event_path(@event), method: :post, class: 'btn btn-primary'
      - else
        = button_to 'Start', start_event_path(@event), method: :post, class: 'btn btn-primary'
  .row
    .col
      %p
